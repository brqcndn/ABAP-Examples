*&---------------------------------------------------------------------*
*& Report ZBC_SAP04_109
*&---------------------------------------------------------------------*
*&
*&---------------------------------------------------------------------*
REPORT zbc_sap04_109.

PARAMETERS: p_num1 TYPE i,
            p_num2 TYPE i,
            p_sum  RADIOBUTTON GROUP abc,
            p_sub  RADIOBUTTON GROUP abc,
            p_mul  RADIOBUTTON GROUP abc,
            p_div  RADIOBUTTON GROUP abc.


DATA: gv_result  TYPE i.


START-OF-SELECTION.


  IF p_sum = abap_true.
    PERFORM sum.
  ELSEIF p_sub = abap_true.
    PERFORM sub.
  ELSEIF p_mul = abap_true.
    PERFORM mul.
  ELSEIF p_div = abap_true.
    PERFORM div.
  ENDIF.



*&---------------------------------------------------------------------*
*&      Form  SUM
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
*  -->  p1        text
*  <--  p2        text
*----------------------------------------------------------------------*
FORM sum .
  gv_result = p_num1 + p_num2.
  WRITE:gv_result.
ENDFORM.
*&---------------------------------------------------------------------*
*&      Form  SUB
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
*  -->  p1        text
*  <--  p2        text
*----------------------------------------------------------------------*
FORM sub .
  gv_result = p_num1 - p_num2.
  WRITE:gv_result.
ENDFORM.
*&---------------------------------------------------------------------*
*&      Form  MUL
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
*  -->  p1        text
*  <--  p2        text
*----------------------------------------------------------------------*
FORM mul .
  gv_result = p_num1 * p_num2.
  WRITE:gv_result.
ENDFORM.
*&---------------------------------------------------------------------*
*&      Form  DIV
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
*  -->  p1        text
*  <--  p2        text
*----------------------------------------------------------------------*
FORM div .

  IF p_num2 = 0.
    MESSAGE 'Bölen sıfır olamaz' TYPE 'S' DISPLAY LIKE 'E'.
    EXIT.
  ELSE.
    gv_result = p_num1 / p_num2.
    WRITE:gv_result.
  ENDIF.

ENDFORM.
